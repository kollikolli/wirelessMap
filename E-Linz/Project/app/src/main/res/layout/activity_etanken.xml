<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.elinz.app.ETanken">

    <TextView
        android:text="E-tanken"
        android:id="@+id/tanken_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14pt"
        android:textStyle="bold"
        android:gravity="center_vertical|center_horizontal" />

    <TextView
        android:id="@+id/tanken_station_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="E-Station:"
        android:textSize="11pt"
        android:layout_below="@id/tanken_header"
        android:layout_marginTop="10dp"
        />

    <EditText
        android:id="@+id/tanken_station_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="E-Station"
        android:textSize="10pt"
        android:layout_below="@id/tanken_header"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:id="@+id/tanken_kwh_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="KwH:"
        android:textSize="11pt"
        android:layout_below="@id/tanken_station_edit"
        android:layout_marginTop="10dp"
        />

    <EditText
        android:id="@+id/tanken_kwh_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="KwH"
        android:textSize="10pt"
        android:layout_below="@id/tanken_station_edit"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:id="@+id/tanken_km_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kilometer"
        android:textSize="11pt"
        android:layout_below="@id/tanken_kwh_edit"
        android:layout_marginTop="10dp"
        />

    <EditText
        android:id="@+id/tanken_km_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Kilometer"
        android:textSize="10pt"
        android:layout_below="@id/tanken_kwh_edit"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        />

    <Button
        android:id="@+id/tanken_button"
        android:text="E-tanken"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tanken_km_edit"
        android:layout_marginTop="20dp"/>

</RelativeLayout>
