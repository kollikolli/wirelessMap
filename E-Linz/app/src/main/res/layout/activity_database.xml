<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.elinz.app.DatabaseActivity"
    tools:ignore="MergeRootFrame">

    <TextView
        android:id="@+id/wifiId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WIFI-ID"
        android:textSize="11pt"
        android:layout_marginTop="10dp"
        />

    <EditText
        android:id="@+id/ssid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="SSID"
        android:inputType="textCapSentences"
        android:textSize="10pt"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="add_string"
        android:id="@+id/button"
        android:onClick="newWifi" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="find_string"
        android:id="@+id/button2"
        android:onClick="lookupWIFI" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="delete_string"
        android:id="@+id/button3"
        android:onClick="removeWifi" />


</LinearLayout>